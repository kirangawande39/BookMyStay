<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment</title>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
            margin: 0;
        }

        .payment-container {
            background: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 400px;
            width: 100%;
        }

        h2 {
            margin-bottom: 20px;
            font-weight: 600;
            color: #333;
        }

        p {
            font-size: 18px;
            margin-bottom: 20px;
            color: #555;
        }

        .pay-btn {
            background: #3399cc;
            color: white;
            padding: 12px 20px;
            font-size: 16px;
            font-weight: 600;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: 0.3s;
        }

        .pay-btn:hover {
            background: #2878a8;
        }
    </style>
</head>
<body>
    <div class="payment-container">
        <h2>Pay for Rental Service</h2>
        <p>Amount: ₹<%= order.amount / 100 %></p> <!-- Amount in Rupees -->
        <button class="pay-btn" id="pay-btn">Pay Now</button>
    </div>

    <script>
        document.getElementById("pay-btn").addEventListener("click", function () {
            const order = <%- JSON.stringify(order) %>; // Order data from backend
            const razorpayKey = "<%= RAZORPAY_KEY_ID %>"; // Getting API key from backend

            const options = {
                key: razorpayKey, // Razorpay API Key from .env
                amount: order.amount, // Amount in paisa
                currency: order.currency,
                name: "RentSphere",
                description: "Rental Payment",
                order_id: order.id, // Order ID from Razorpay
                handler: function (response) {
                    // ✅ Payment Successful - Redirect to Success Page
                    window.location.href = "/payment-success?payment_id=" + response.razorpay_payment_id;
                },
                prefill: {
                    name: "kiran gawande",
                    email: "kirangawande9307@gmail.com",
                    contact: "9307941288",
                },
                theme: {
                    color: "#3399cc",
                },
            };

            const rzp = new Razorpay(options);
            rzp.open();
        });
    </script>
</body>
</html>
