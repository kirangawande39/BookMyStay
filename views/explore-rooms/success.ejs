<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Payment Successful</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Bootstrap + Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <!-- EmailJS, html2pdf, QRCode -->
  <script src="https://cdn.emailjs.com/dist/email.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

  <script>
    (function () {
      emailjs.init("tsg_InKx5zF2PHZxd"); // ‚úÖ Your EmailJS Public Key
    })();
  </script>

  <style>
    body {
      background: linear-gradient(to right, #dff9fb, #f8f9fa);
      font-family: 'Segoe UI', sans-serif;
    }

    .success-container {
      max-width: 700px;
      margin: 60px auto;
      padding: 35px;
      background: white;
      border-radius: 20px;
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
      position: relative;
    }

    .success-title {
      font-size: 32px;
      font-weight: 800;
      color: #28a745;
    }

    .subtitle {
      color: #333;
      font-size: 18px;
      margin-bottom: 20px;
    }

    .card {
      border: none;
      background-color: #f1f1f1;
      border-radius: 12px;
      padding: 20px;
      margin-top: 20px;
    }

    .card-text strong {
      color: #333;
    }

    .qr-code {
      margin: 25px auto;
      text-align: center;
    }

    .btn-container {
      margin-top: 30px;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .btn-download, .btn-home {
      font-size: 16px;
      font-weight: bold;
      padding: 12px;
      border-radius: 10px;
      width: 100%;
    }

    .btn-download {
      background-color: #007bff;
      color: white;
      border: none;
    }

    .btn-download:hover {
      background-color: #0056b3;
    }

    .btn-home {
      background-color: #20c997;
      color: white;
      border: none;
    }

    .btn-home:hover {
      background-color: #17a589;
    }

    .back-icon {
      position: absolute;
      top: 20px;
      left: 25px;
      font-size: 24px;
      color: #6c757d;
      cursor: pointer;
      transition: color 0.2s;
    }

    .back-icon:hover {
      color: #000;
    }

    .status {
      font-size: 18px;
      color: green;
      margin-top: 10px;
      font-weight: 600;
    }
  </style>
</head>
<body>

<div class="success-container" id="receipt">
  <!-- üîô Go Back Icon -->
  <a href="/explore-rooms" class="back-icon" title="Go back">
    <i class="bi bi-arrow-left-circle-fill"></i>
  </a>

  <h2 class="success-title">‚úÖ Payment Successful</h2>
  <p class="subtitle">Thank you, <strong><%= booking.user.username %></strong>. Your booking has been confirmed!</p>

  <div class="card">
    <h4 class="card-title"><%= booking.listing.title %></h4>
    <p class="card-text"><strong>üìç Location:</strong> <%= booking.listing.location %></p>
    <p class="card-text"><strong>üí∞ Price per Night:</strong> ‚Çπ<%= booking.listing.price %></p>
    <p class="card-text"><strong>üìÖ Booking Dates:</strong> <%= new Date(booking.startDate).toLocaleDateString() %> to <%= new Date(booking.endDate).toLocaleDateString() %></p>
    <p class="card-text"><strong>üí≥ Total Paid:</strong> ‚Çπ<%= booking.totalPrice %></p>
    <p class="status">Status: <%= booking.status %></p>
  </div>

  <div class="qr-code" id="qrcode"></div>

  <div class="btn-container">
    <button class="btn-download" onclick="downloadReceipt()">
      <i class="bi bi-download me-2"></i> Download Receipt
    </button>
    
  </div>
</div>

<!-- Email Form (Hidden) -->
<form id="contact-form" style="display: none">
  <input type="hidden" name="to_email" value="<%= booking.user.email %>" />
  <input type="hidden" name="user_name" value="<%= booking.user.username %>" />
  <input type="hidden" name="user_email" value="<%= booking.user.email %>" />
  <input type="hidden" name="price" value="<%= booking.totalPrice %>" />
  <input type="hidden" name="message" value="Thank you for your booking. Your stay at <%= booking.listing.title %> from <%= new Date(booking.startDate).toLocaleDateString() %> to <%= new Date(booking.endDate).toLocaleDateString() %> has been confirmed. Total paid: ‚Çπ<%= booking.totalPrice %>." />
</form>

<script>
    function downloadReceipt() {
        const qrCanvas = document.querySelector('#qrcode canvas');
        if (qrCanvas) {
          const img = document.createElement('img');
          img.src = qrCanvas.toDataURL('image/png');
          img.style.width = '120px';
          img.style.height = '120px';
      
          const qrCodeDiv = document.getElementById('qrcode');
          qrCodeDiv.innerHTML = ''; // Remove existing canvas
          qrCodeDiv.appendChild(img); // Add image version of QR
      
          // Wait a bit for image to render before generating PDF
          setTimeout(() => {
            const element = document.getElementById("receipt");
            html2pdf(element, {
              margin: 10,
              filename: 'Booking_Receipt.pdf',
              image: { type: 'jpeg', quality: 0.98 },
              html2canvas: { scale: 2 },
              jsPDF: { format: 'a4', orientation: 'portrait' }
            });
          }, 500);
        } else {
          alert("QR Code not found.");
        }
      }
      

  // Generate QR + Email
  window.onload = function () {
    new QRCode(document.getElementById("qrcode"), {
      text: `https://rentspheres.onrender.com/owner/verify-booking?bookingId=<%= booking._id %>`,
      width: 120,
      height: 120
    });

    emailjs.sendForm("service_n6tispg", "template_ysmu9b9", document.getElementById("contact-form"))
      .then(() => console.log("üìß Email sent"))
      .catch((error) => console.error("‚ùå Email failed:", error));
  };
</script>

</body>
</html>
