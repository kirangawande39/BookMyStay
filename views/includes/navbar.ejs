<style>
  /* Navbar Styling */
  .navbar {
      background: white;
      box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
  }
  
  /* Navbar Brand Icon */
  .navbar-brand i {
      font-size: 28px;
      color: #008080; /* Teal */
  }
  
  /* Navbar Links */
  .navbar-nav .nav-link {
      color: #333;
      font-weight: 600;
      padding: 8px 15px;
      transition: color 0.3s ease;
  }
  
  .navbar-nav .nav-link:hover {
      color: #008080;
  }
  
  /* Search Bar */
  #searchForm {
      display: flex;
      align-items: center;
      border-radius: 50px;
      padding: 5px 15px;
      
      background: white;
  }
  
  #searchBar {
    border: 1px solid rgb(179, 173, 173);
      outline: none;
      font-size: 16px;
      padding: 8px;
      width: 250px;
      
  }
  
  #searchButton {
    background-color:blue;
    display: none;

      border: none;
      color: white;
      padding: 8px 12px;
      border-radius: 50px;
      cursor: pointer;
      transition: background 0.3s ease;
  }
  
  #searchButton:hover {
      background-color:blue;
  }
  
  /* Profile Dropdown */
  .dropdown-toggle {
      color: #333;
      font-size: 20px;
      display: flex;
      align-items: center;
      gap: 5px;
      cursor: pointer;
      transition: transform 0.3s ease;
  }
  
  .dropdown-menu {
      background: #f8f9fa;
      border-radius: 8px;
      min-width: 160px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  .dropdown-item {
      color: #333;
      padding: 10px 15px;
      transition: background 0.3s ease;
  }
  
  .dropdown-item:hover {
      background: #008080;
      color: white;
  }
  
  .dropdown-divider {
      border-color: rgba(0, 0, 0, 0.1);
  }
  
  /* Mobile responsiveness */
  @media (max-width: 400px) {
      
      #searchBar{
        width: 50vw;
        margin-right: 100px;
        border: 1px solid rgb(179, 173, 173);
      }
      .search-button {
        width: 20%;
        margin-left: 20px;
          
        }
       
       
    

  }


  </style>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
  
  <nav class="navbar navbar-expand-lg sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <i class="fa-brands fa-square-pied-piper"></i>
      </a>
       <!-- Search Bar -->
       <div class="navbar-nav ms-auto">
        <form class="d-flex search-form" id="searchForm">
          

          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" id="searchBar" class="form-control me-2 search-input" placeholder="Search by title or location here.">
          </div>
         
         
        </form>
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          
          <a class="nav-link" href="/explore-rooms">Home</a>
          <a class="nav-link" href="/explore-rooms/add-room">List Your Property</a>
        </div>
  
       
  


        <!-- Authentication -->
        <div class="navbar-nav ms-auto">
          <% if (!currUser) { %>
              <a class="nav-link" href="/signup">Sign Up</a>
              <a class="nav-link" href="/login">Log In</a>
          <% } else { %>
              <div class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
                      <i class="fa-solid fa-user"></i>
                  </a>
                  <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                      <li><a class="dropdown-item" href="/mybookings">My Bookings</a></li>
                      <li><hr class="dropdown-divider"></li>
                      <li><a class="dropdown-item" href="/logout">Log Out</a></li>
                  </ul>
              </div>
          <% } %>
        </div>
      </div>
    </div>
  </nav>
 